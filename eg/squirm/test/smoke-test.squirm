;; -*- cant -*-

(to (main)
  (let pid (spawn (on ()
                    (report (or #no "hey"))
                    (report "dud")
                    (! (me) 'not-this)
                    (? ('not-this (report "not this")))
                    (? (msg (report ['got msg])))
                    (report "dude")
                    (report (factorial 15)))))
  (report ['pid pid])
  ((eval '!) pid 'yoohoo)
  (report (apply factorial '(10)))
  (report (be pid
            ('42 'nope)
            ((: factorial) 'nope-nope)
            ((: pid) 'yep))))

(to (report x)
  (print [(me) x]))

(to (factorial n)
  (be n
    (0 1)
    (~ (let x (factorial (- n 1)))
       (* n x))))
